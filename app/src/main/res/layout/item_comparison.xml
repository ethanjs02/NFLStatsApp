<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:backgroundTintMode="add"
    android:gravity="center"> <!-- Center the content inside the LinearLayout -->

    <!-- Stat Name -->
    <TextView
        android:id="@+id/statName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stat Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"
        android:gravity="center" /> <!-- Center the text within this TextView -->

    <!-- Stat Value -->
    <TextView
        android:id="@+id/statValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stat Value"
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center" /> <!-- Center the text within this TextView -->
</LinearLayout>
